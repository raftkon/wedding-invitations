generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wedding {
  id                String    @id @default(cuid())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  firstPartnerName  String
  secondPartnerName String
  email             String
  phone             String
  weddingDateTime   DateTime // ‚Üê single field, stored in UTC
  ceremonyDateTime  DateTime?
  ceremonyDuration  Int? // in minutes
  receptionDateTime DateTime?
  receptionDuration Int?
  venueName         String?
  venueAddress      String?
  venueCoords       Json? // { lat: number, lng: number }
  venueDetails      String?
  description       String?
}
